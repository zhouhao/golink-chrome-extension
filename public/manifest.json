{
  "name": "Tiny Go Link",
  "version": "1.0.2",
  "manifest_version": 3,
  "description": "A simple extension to create a tiny go link for the current page.",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My Go Links",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ]
}
